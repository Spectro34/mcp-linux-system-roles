# MCP Server - Linux System Roles Configuration (Example)
mcpServers:
  roles:
    type: local
    command: ["<ABSOLUTE_PATH>/server/server.py"]
    allowedTools: ["run_system_role", "get_role_status", "list_available_roles", "get_role_documentation"]

